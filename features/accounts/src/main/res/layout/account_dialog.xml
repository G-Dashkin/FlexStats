<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/onPrimary"
    android:minWidth="400dp"
    android:padding="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Создать новый аккаунт?"
        android:textColor="@color/onBackground"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/accountForm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form_border"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="16dp"
            android:hint="Аккаунт/почта яндекса"
            android:gravity="start|center_vertical"
            android:textColor="@color/onBackground"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"

            android:hint=" "
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/auto_complete_txt"
                android:background="@drawable/form_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Выберите тип аккаунта"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/metrika_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/metrika_counter_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form_border"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="16dp"
            android:hint="Аккаунт/почта яндекса"
            android:gravity="start|center_vertical"
            android:textColor="@color/onBackground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_border"
            android:clickable="true"
            android:layout_weight="1"
            android:text="Отменить"
            android:textStyle="bold"
            android:textColor="@color/onBackground" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_border"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Подтвердить"
            android:textStyle="bold"
            android:textColor="@color/onBackground"/>
    </LinearLayout>

</LinearLayout>