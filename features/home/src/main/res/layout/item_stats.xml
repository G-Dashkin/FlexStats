<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center|left"
    android:background="@color/background"
    android:orientation="horizontal" >

    <!--    data column-->
    <TextView
        android:id="@+id/valueDate"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="2023-04-04"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@drawable/stats_item_border"/>

    <!--    Yandex Direct-->
    <LinearLayout
        android:id="@+id/yandexDirect"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/stats_item_border"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textClicks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Клики:"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/textImpressions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Показы:"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/textCosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Расход:"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/valueClicks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="325 546"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/valueImpressions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="45 542 346"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/valueCosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="3 655 045р."
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--    Yandex Metrika-->
    <LinearLayout
        android:id="@+id/yandexMetrika"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/stats_item_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Заказы:"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/textRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Доход:"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/valueTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="10 435"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/valueRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="234 343 433р."
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--    Measures-->
    <LinearLayout
        android:id="@+id/measures"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/stats_item_border"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textCPC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="CPC:"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/textCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="CR:"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/textDRR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="ДРР:"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/valueCPC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="14.43р."
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/valueCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="2.4%"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/valueDRR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="3.50%"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>