<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/logo_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin30"
        app:cardCornerRadius="@dimen/radius30"
        app:cardElevation="@dimen/elevation20"
        android:background="@drawable/custom_edittext">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding10">
            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:textSize="@dimen/textSize36"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/padding10"
                android:hint="@string/email"
                android:padding="@dimen/padding10"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/margin16"/>
            <Button
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:text="@string/reset_password"
                android:textSize="@dimen/textSize18"
                android:layout_marginTop="@dimen/margin30"
                android:backgroundTint="@color/primary"
                app:cornerRadius = "@dimen/radius20"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_member"
            android:paddingTop="@dimen/padding10"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/toLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin2"
            android:text="@string/login_here"
            android:paddingTop="@dimen/padding10"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/primary"/>

    </LinearLayout>
</LinearLayout>