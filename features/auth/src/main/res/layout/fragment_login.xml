<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/logo_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin30"
        app:cardCornerRadius="@dimen/radius30"
        app:cardElevation="@dimen/elevation20"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding10">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="@dimen/textSize36"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="@dimen/padding10"
                android:hint="@string/login"
                android:padding="@dimen/padding10"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/margin16"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="@dimen/padding10"
                android:hint="@string/password"
                android:padding="@dimen/padding10"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/margin24"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:id="@+id/loginButton"
                android:text="@string/login"
                android:textSize="@dimen/textSize18"
                android:layout_marginTop="@dimen/margin30"
                android:backgroundTint="@color/primary"
                app:cornerRadius="@dimen/radius20"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_yet_registered"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/registerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin2"
            android:text="@string/register_now"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/primary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:paddingTop="@dimen/padding10"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/resetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin2"
            android:text="@string/reset_here"
            android:paddingTop="@dimen/padding10"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/primary"/>

    </LinearLayout>

</LinearLayout>